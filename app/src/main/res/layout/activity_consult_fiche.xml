                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!-- ADRESSE -->
            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:text="@string/adr"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/adr"
                        android:layout_alignParentTop="true"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/adrEdit"
                        style="@style/MyEditTextstyle"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:layout_below="@+id/adr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <!-- ADRESSE -->
            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:text="@string/ville"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ville"
                        android:layout_alignParentTop="true"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/villeEdit"
                        style="@style/MyEditTextstyle"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:layout_below="@+id/ville"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!-- EXPO -->
            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:text="@string/expo"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/expo"
                        android:layout_alignParentTop="true"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/expoEdit"
                        style="@style/MyEditTextstyle"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:layout_below="@+id/expo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!-- TAXE FONCIERE -->
            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:text="@string/taxe"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/taxe"
                        android:layout_alignParentTop="true"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/taxeEdit"
                        style="@style/MyEditTextstyle"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:layout_below="@+id/taxe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!-- COPRO -->
            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:text="@string/copro"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/copro"
                        android:layout_alignParentTop="true"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/coproEdit"
                        style="@style/MyEditTextstyle"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:layout_below="@+id/copro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!-- AUTRES NOTES -->
            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:text="@string/descr"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/descr"
                        android:layout_alignParentTop="true"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/notesEdit"
                        style="@style/MyEditTextstyle"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:layout_below="@+id/descr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollbars="vertical"
                        android:fadeScrollbars="false"
                        android:maxLines="7"
                        />

                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <!-- CARTE GOOGLE MAPS -->
            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.MapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        class="com.umontpellier.theochambon.androimmo.WorkaroundMapFragment"/>
                        />


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!-- PHOTOS DU BIEN -->
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:id="@+id/photo1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:onClick="popPhoto"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:id="@+id/photo2"
