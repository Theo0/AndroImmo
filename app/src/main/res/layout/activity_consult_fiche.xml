<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.umontpellier.theochambon.androimmo.ConsultFicheActivity">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/modify"
        android:onClick="editFiche"
        app:fabSize="normal"
        app:backgroundTint="@color/my_primary"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_above="@id/fab"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/upload"
        android:onClick="addExportButton"
        app:fabSize="normal"
        app:backgroundTint="@color/my_primary"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabExportPDF"
        android:layout_above="@id/fab2"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/pdf"
        android:onClick="addExportButton"
        app:fabSize="mini"
        app:backgroundTint="@android:color/holo_blue_dark"
        android:visibility="gone"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabExportDistant"
        android:layout_above="@id/fabExportPDF"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/upload"
        android:onClick="addExportButton"
        app:fabSize="mini"
        app:backgroundTint="@android:color/holo_blue_dark"
        android:visibility="gone"
        />

    <!-- Liste des cartes dans une scrollview-->
    <ScrollView android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

            <!-- Nom de la fiche -->
            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:text="Ma Fiche"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:id="@+id/NomFiche"
                        android:layout_alignParentTop="true"
                        android:textSize="22sp"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        />


                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <!-- SURFACE -->
            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:text="@string/surface"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/SurfaceText"
                        android:layout_alignParentTop="true"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/surfaceEdit"
                        style="@style/MyEditTextstyle"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:layout_below="@+id/SurfaceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <!-- NOMBRE PIECES -->
            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:text="@string/nbpieces"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/nbPieces"
                        android:layout_alignParentTop="true"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/nbpiecesEdit"
                        style="@style/MyEditTextstyle"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:layout_below="@+id/nbPieces"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!-- NOMBRES CHAMBRES -->
            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:text="@string/nbchambres"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/nbchambre"
                        android:layout_alignParentTop="true"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/nbchambreEdit"
                        style="@style/MyEditTextstyle"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@null"
                        android:layout_below="@+id/nbchambre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!-- NOMBRE SDB -->
            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
